<body>

    <!-- Outer wrapper to manage layout -->
    <div id="wrapper" class="w-full max-w-4xl space-y-6">

        <!-- Input/Status Card (Centered at the top) -->
        <div class="card p-8 md:p-10 rounded-xl w-full transition-all duration-300 max-w-lg mx-auto">
            
            <h1 class="text-3xl font-bold text-gray-900 mb-4 text-center">Secure Access Portal</h1>
            <p class="text-gray-500 mb-8 text-center">Enter the URL you wish to load securely.</p>

            <!-- Input Form (allows Enter key submission) -->
            <form id="urlForm" class="space-y-4">
                <input 
                    type="url" 
                    id="urlInput" 
                    placeholder="https://example.com" 
                    class="w-full px-5 py-3 border rounded-lg focus:outline-none focus:ring-2 transition duration-150 text-gray-700"
                    required
                >

                <button 
                    type="submit"
                    id="submitButton" 
                    class="w-full primary-button text-white font-semibold py-3 rounded-lg transition duration-300 ease-in-out transform hover:scale-[1.01] focus:outline-none focus:ring-4 focus:ring-indigo-500/50"
                >
                    Start Session
                </button>
            </form>

            <!-- Status Message Box -->
            <div id="statusMessage" class="mt-6 p-4 rounded-lg hidden text-sm font-medium transition-opacity duration-500">
                <!-- Content will be inserted here by JavaScript -->
            </div>

        </div>

        <!-- Frame Controls (Full Screen Button) -->
        <div id="frameControls" class="flex justify-end hidden">
            <button 
                id="fullscreenButton"
                class="px-4 py-2 primary-button text-sm text-white font-medium rounded-lg transition duration-200"
                title="View content in full screen"
            >
                <i class="fas fa-expand mr-2"></i> Full Screen
            </button>
        </div>

        <!-- Content Frame Container -->
        <!-- This container holds the iframe where the requested website will attempt to load -->
        <div id="contentFrameContainer" class="hidden w-full h-[60vh] border-4 rounded-xl overflow-hidden shadow-2xl transition-all duration-500">
            <iframe id="contentFrame" src="about:blank" title="Loaded Content" class="w-full h-full border-none"></iframe>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const urlForm = document.getElementById('urlForm');
            const urlInput = document.getElementById('urlInput');
            const submitButton = document.getElementById('submitButton');
            const statusMessage = document.getElementById('statusMessage');
            const contentFrame = document.getElementById('contentFrame');
            const contentFrameContainer = document.getElementById('contentFrameContainer');
            const frameControls = document.getElementById('frameControls');
            const fullscreenButton = document.getElementById('fullscreenButton');
            
            let statusTimeout; // Variable to hold the setTimeout ID for clearing the message

            /**
             * Function to display status messages and automatically hide them after 5 seconds.
             */
            function showMessage(text, type) {
                statusMessage.textContent = text;
                statusMessage.classList.remove('hidden', 'opacity-0');
                statusMessage.classList.add('opacity-100');

                // Reset classes
                statusMessage.classList.remove('bg-red-900/50', 'text-red-300', 'bg-green-900/50', 'text-green-300', 'bg-indigo-900/50', 'text-indigo-300');

                // Adjust classes for dark mode visibility
                if (type === 'error') {
                    statusMessage.classList.add('bg-red-900/50', 'text-red-300'); 
                } else if (type === 'success') {
                    statusMessage.classList.add('bg-green-900/50', 'text-green-300'); 
                } else {
                    // Default info status (e.g., processing)
                    statusMessage.classList.add('bg-indigo-900/50', 'text-indigo-300'); 
                }
                
                // Clear previous timeout and set a new one to hide the message
                clearTimeout(statusTimeout);
                statusTimeout = setTimeout(() => {
                    statusMessage.classList.add('opacity-0');
                    // Use transitionend to set 'hidden' after the fade effect finishes
                    statusMessage.addEventListener('transitionend', function hide() {
                        if (statusMessage.classList.contains('opacity-0')) {
                            statusMessage.classList.add('hidden');
                            statusMessage.removeEventListener('transitionend', hide);
                        }
                    });
                }, 5000); // Hide after 5 seconds
            }

            /**
             * Function to safely check if a string looks like a URL.
             */
            function isValidUrl(string) {
                try {
                    const url = new URL(string);
                    // Basic check for http or https protocols
                    return url.protocol === 'http:' || url.protocol === 'https:';
                } catch (e) {
                    return false;
                }
            }

            /**
             * Core function to handle form submission and load the URL into the iframe.
             */
            function handleSubmission(event) {
                event.preventDefault();
                const url = urlInput.value.trim();

                if (!url) {
                    showMessage("Please enter a URL to proceed.", 'error');
                    return;
                }

                // Normalize URL: If the URL doesn't start with 'http' or 'https',
                // we now default to 'http://' as requested.
                const fullUrl = url.startsWith('http') ? url : `http://${url}`;

                if (!isValidUrl(fullUrl)) {
                    showMessage("The entered text is not a valid URL format (e.g., http://website.com or https://website.com).", 'error');
                    return;
                }
                
                // 1. Show processing message and disable button
                showMessage(`Attempting to load: ${fullUrl}. Check the frame below...`, 'info');
                submitButton.disabled = true;

                // 2. Make the iframe container and controls visible
                contentFrameContainer.classList.remove('hidden');
                frameControls.classList.remove('hidden');
                
                // 3. Define load handlers
                
                const cleanup = () => {
                    submitButton.disabled = false;
                    contentFrame.removeEventListener('load', loadHandler);
                    contentFrame.removeEventListener('error', errorHandler);
                };
                
                const loadHandler = () => {
                    showMessage(`Load attempt finished for: ${fullUrl}. Click "Full Screen" for a better view.`, 'success');
                    cleanup();
                };
                
                const errorHandler = () => {
                     // Note: This often fires even if the site is blocked by X-Frame-Options/CSP, 
                     // as the browser stops loading the resource due to policy.
                     showMessage(`Load failed (or blocked by security policy) for: ${fullUrl}. Try a different URL.`, 'error');
                     cleanup();
                };

                // Clear previous listeners to prevent duplicates and reset frame
                contentFrame.src = 'about:blank'; 
                contentFrame.addEventListener('load', loadHandler);
                contentFrame.addEventListener('error', errorHandler);
                
                // 4. Load the URL into the iframe
                contentFrame.src = fullUrl;

                // Optional: Clear the input after loading
                urlInput.value = '';
            }

            // Attach event listener to the form to handle both click and Enter key
            urlForm.addEventListener('submit', handleSubmission);


            // Fullscreen logic
            fullscreenButton.addEventListener('click', () => {
                try {
                    // Request fullscreen on the iframe container
                    if (contentFrameContainer.requestFullscreen) {
                        contentFrameContainer.requestFullscreen();
                    } else if (contentFrameContainer.webkitRequestFullscreen) { /* Safari */
                        contentFrameContainer.webkitRequestFullscreen();
                    } else if (contentFrameContainer.msRequestFullscreen) { /* IE11 */
                        contentFrameContainer.msRequestFullscreen();
                    } else {
                        showMessage("Your browser does not fully support the Fullscreen API.", 'error');
                    }
                } catch (e) {
                    // Catch the disallowed by permissions policy error and log it
                    console.error("Fullscreen Error:", e);
                    // Display a user-friendly message explaining the limitation
                    showMessage("Fullscreen denied: The hosting environment may restrict this action for security purposes.", 'error');
                }
            });
        });
    </script>
</body>
</html>



