<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Secure Web Interface</title>
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* CSS for the animated starfield effect */
        @keyframes move-starfield {
            /* Moves the background image diagonally over time */
            from { background-position: 0 0; }
            to { background-position: -10000px 5000px; }
        }

        /* Custom styles for aesthetic appeal and full-screen layout (Space Theme) */
        body {
            font-family: 'Inter', sans-serif;
            /* Deep space background: Dark purple to indigo gradient */
            background: linear-gradient(135deg, #0D0032 0%, #150050 50%, #2A006A 100%);
            color: #E0E7FF; /* Light, bright text color */
            display: flex;
            justify-content: center;
            align-items: flex-start;
            min-height: 100vh;
            margin: 0;
            padding: 1.5rem;
            position: relative; 
            overflow-x: hidden;
        }

        /* Pseudo-element for the animated starfield layer */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1; /* Place behind all content */
            /* Generate a star pattern using radial gradients */
            background: 
                /* Smallest, densest layer of stars */
                radial-gradient(2px 2px at 50% 50%, #eee, rgba(0,0,0,0)),
                /* Medium layer of stars */
                radial-gradient(3px 3px at 30% 70%, #ddd, rgba(0,0,0,0)),
                /* Larger, sparser layer of stars */
                radial-gradient(4px 4px at 70% 20%, #ccc, rgba(0,0,0,0));
            background-repeat: repeat;
            background-size: 2000px 2000px; /* Defines the size of the repeatable pattern */
            animation: move-starfield 120s linear infinite; /* Apply the slow animation */
        }

        /* Subtle glow and dark, semi-transparent background for the card */
        .card {
            box-shadow: 0 0 40px rgba(79, 70, 229, 0.4); /* Indigo glow */
            background-color: rgba(17, 24, 39, 0.7); /* Semi-transparent dark card */
            border: 1px solid rgba(79, 70, 229, 0.5); /* Light border */
            backdrop-filter: blur(5px); /* Add a slight blur (frosted glass) effect */
        }
        
        /* Iframe container with a glowing border */
        #contentFrameContainer {
            border-color: #6366F1;
            box-shadow: 0 0 30px rgba(99, 102, 241, 0.8);
            background-color: #0d0d1f; /* Even darker frame background */
        }

        /* Custom glow button style: Purple to Indigo gradient */
        .primary-button {
            background: linear-gradient(90deg, #8B5CF6, #6366F1); /* Purple to Indigo */
            box-shadow: 0 4px 15px rgba(139, 92, 246, 0.6); /* Purple shadow */
            transition: all 0.3s ease-in-out; /* Added transition for smooth hover effects */
        }
        .primary-button:hover {
            background: linear-gradient(90deg, #9C6FE6, #7C82FA); /* Slightly lighter gradient */
            box-shadow: 0 4px 25px rgba(179, 148, 255, 0.8); /* Stronger, lighter purple shadow for pulse effect */
            transform: scale(1.02); /* Slight lift on hover */
        }

        /* Ensure input elements fit the dark theme and are readable */
        input#urlInput {
            background-color: rgba(255, 255, 255, 0.1);
            border-color: #4F46E5; /* Indigo border */
            color: #E0E7FF; /* Light text color */
        }
        input#urlInput::placeholder {
            color: #9CA3AF; /* Light gray placeholder */
        }
        input#urlInput:focus {
            --tw-ring-color: #A78BFA; /* Light purple focus ring */
        }

        /* Make status messages stand out on the dark background */
        #statusMessage {
            opacity: 1; /* Override transition opacity */
        }

        .text-gray-900 { color: #E0E7FF; } /* Global text color adjustment for headings */
        .text-gray-500 { color: #BEC5E0; } /* Subtitle color adjustment */
    </style>
    <!-- Icon library for the fullscreen button -->
    <script src="https://kit.fontawesome.com/a7c36d0f8d.js" crossorigin="anonymous"></script> 
